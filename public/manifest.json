{
  "name": "Your Extension",
  "version": "1.0",
  "manifest_version": 3,
  "web_accessible_resources": [
    {
      "resources": ["logo.webp", "assets/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "logo.webp",
    "48": "logo.webp",
    "128": "logo.webp"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "logo.webp"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["<all_urls>"]
}
